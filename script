pipeline {
    agent any
    tools{
    stages {
        stage('Clean workspace and Navigate to the folder'){
            steps{
                cleanWs()
                bat 'copy C:\\\\Users\\\\vijay\\\\Desktop\\\\Journey\\\\java "C:\\Users\\vijay\\Desktop\\Journey\\jenkinsDemo Java  Code"'
            }
        }
        stage('Build') {
            steps {
                bat 'javac Test.java'
            }
        }
        stage('Jar') {
            steps {
                bat 'jar cfe myJar.jar Test Test.class'
            }
        }
        stage('Run') {
            steps {
                bat 'java -jar myJar.jar'
            }
        }
        stage('Artifact'){
            steps{
                archiveArtifacts artifacts: '*.jar', followSymlinks: false
            }
        }
    }
}
}
